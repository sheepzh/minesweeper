{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "paths": {
      "@core/*": [
        "src/core/*"
      ],
      "@util/*": [
        "src/util/*"
      ],
      "@view/*": [
        "src/view/*"
      ],
      "@i18n/*": [
        "src/i18n/*"
      ],
      "@ext/*": [
        "src/extension/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "*": [
        "types/*"
      ]
    }
  },
  "lib": [
    "dom",
    "ES2023"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "files": true,
    "require": [
      "tsconfig-paths/register"
    ]
  }
}